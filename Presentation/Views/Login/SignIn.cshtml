@model Entity.Concrete.User

@{
    Layout = null;  
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Giriş Yap - Personal Blog App</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="/Templates/admin-template/favicon.png">

    <script defer src="/Templates/admin-template/assets/plugins/fontawesome/js/all.min.js"></script>

    <link id="theme-style" rel="stylesheet" href="/Templates/admin-template/assets/css/portal.css">

</head>

<body class="app app-login p-0">
    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 auth-main-col text-center">
            <div class="d-flex flex-column justify-content-center vh-100">
                <div class="app-auth-body mx-auto">
                    <div class="app-auth-branding mb-4"><a class="app-logo" href="index.html"><img class="logo-icon me-2" src="/Templates/main-template/favicon.png" alt="logo"></a></div>
                    <h2 class="auth-heading text-center mb-5">Yönetici Paneli</h2>
                    <div class="auth-form-container text-start">
                        <div class="col text-center text-danger">@ViewBag.ErrorMessage</div>
                        @using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new { @class = "p-3" }))
                        {
                            <div class="email mb-3">
                                <label class="sr-only" for="signin-email">Kullanıcı Adı</label>
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı adı" })
                            </div>
                            <div class="password mb-3">
                                <label class="sr-only" for="signin-password">Parola</label>
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Parola", @type = "password" })
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Giriş Yap</button>
                            </div>
                        }
                    </div>
                    <a href="/Home">Siteye Dön</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

