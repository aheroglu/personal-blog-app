@model IEnumerable<Entity.Concrete.Post>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<section class="s-content" style="margin-top: 75px;">
    <h2 class="text-center" style="margin-bottom: 30px; margin-top: 0;">Arama Sonucu</h2>
    <div class="row entries-wrap wide">
        <div class="entries">
            @foreach (var x in Model)
            {
                <article class="col-block">
                    <div class="item-entry" data-aos="zoom-in">
                        <div class="item-entry__thumb">
                            <a href="/Post/Details/@x.Id" class="item-entry__thumb-link">
                                @if (x.Image == "/Templates/admin-template/assets/images/defaul-post-image.png")
                                {
                                    <img src="@x.Image">
                                }
                                else
                                {
                                    <img src="/Images/Post/@x.Image">
                                }
                            </a>
                        </div>
                        <div class="item-entry__text">
                            <div class="item-entry__cat">
                                <a href="/Category/@x.PostCategoryId">@x.PostCategory.Name</a>
                            </div>
                            <h1 class="item-entry__title"><a href="/Post/Details/@x.Id">@x.Title</a></h1>
                            <div class="item-entry__date">
                                <i class="bi bi-calendar"></i> <span>@(((DateTime)x.Date).ToShortDateString())</span> - <i class="bi bi-eye"></i> <span>@x.ClickCount</span>
                            </div>
                        </div>
                    </div>
                </article>
            }
        </div>
    </div>
</section>