@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


@await Component.InvokeAsync("Slider")
    
@await Component.InvokeAsync("Posts")

@await Component.InvokeAsync("Trainings")

@await Component.InvokeAsync("Extra")


<script src="~/lib/jquery/dist/jque ry.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <script>
        swal({
            title: 'İşlem Başarılı!',
            text: '@Html.Raw(System.Web.HttpUtility.HtmlDecode(TempData["SuccessMessage"].ToString()))',
            icon: 'success',
            timer: 3000,
            buttons: false,
        })
    </script>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script>
        swal({
            title: 'İşlem Başarısız!',
            text: '@Html.Raw(System.Web.HttpUtility.HtmlDecode(TempData["ErrorMessage"].ToString()))',
            icon: 'error',
            timer: 3000,
            buttons: false,
        })
    </script>
}